#include <iostream>
#include <vector>
using namespace std;

class AttendanceSession {
private:
    string courseCode;
    string date;
    string startTime;
    int duration; // in minutes

public:
    // Constructor
    AttendanceSession(string code, string d, string time, int dur) {
        courseCode = code;
        date = d;
        startTime = time;
        duration = dur;
    }

    void displaySession() {
        cout << "\n--- Lecture Session Details ---\n";
        cout << "Course Code: " << courseCode << endl;
        cout << "Date: " << date << endl;
        cout << "Start Time: " << startTime << endl;
        cout << "Duration: " << duration << " minutes\n";
    }
};